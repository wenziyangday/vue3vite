{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    ".eslintrc.cjs",
    "**/*.vue",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.js",
    "**/*.cjs",
    "**/*.jsx",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", ".vscode"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "extends": "./alias.json"
}
