{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "**/*.vue",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", ".vscode"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
